{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "extracted_constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "original_text": {
            "type": "string"
          },
          "constraint_type": {
            "type": "string",
            "enum": ["availability", "workload_cap", "fairness", "rotation", "preference", "coverage", "staffing"]
          },
          "target": {
            "type": "object",
            "properties": {
              "employees": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "shift_type": {
                "type": "string",
                "enum": ["AM", "PM", "weekend", "weekday", "Friday_PM", "any"]
              },
              "time_scope": {
                "type": "string",
                "enum": ["per_day", "per_week", "per_month"]
              }
            },
            "required": ["employees", "shift_type", "time_scope"],
            "additionalProperties": false
          },
          "rule": {
            "type": "object",
            "properties": {
              "operator": {
                "type": "string",
                "enum": ["max", "min", "equal", "rotate", "avoid", "prefer"]
              },
              "value": {
                "oneOf": [
                  {"type": "number"},
                  {"type": "null"}
                ]
              }
            },
            "required": ["operator"],
            "additionalProperties": false
          },
          "priority": {
            "type": "string",
            "enum": ["hard", "soft"]
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "notes": {
            "type": "string"
          }
        },
        "required": ["id", "original_text", "constraint_type", "target", "rule", "priority", "confidence", "notes"],
        "additionalProperties": false
      }
    },
    "unmodeled_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "original_text": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          }
        },
        "required": ["original_text", "reason"],
        "additionalProperties": false
      }
    }
  },
  "required": ["extracted_constraints", "unmodeled_rules"],
  "additionalProperties": false
}